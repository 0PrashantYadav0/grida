{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://forms.grida.co/schema/form.schema.json",
  "title": "Form",
  "description": "A form schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "fields": {
      "type": "array",
      "items": {
        "$ref": "https://forms.grida.co/schema/field.schema.json"
      }
    }
  },
  "required": ["title, fields"]
}
