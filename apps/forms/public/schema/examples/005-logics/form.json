{
  "$schema": "https://forms.grida.co/schema/form.schema.json",
  "title": "Logics Demo",
  "name": "logics",
  "description": "Control form behavior with conditional logic",
  "method": "post",
  "fields": [
    {
      "name": "condition",
      "label": "Condition",
      "required": true,
      "type": "select",
      "options": [
        {
          "label": "Yes",
          "value": "yes"
        },
        {
          "label": "No",
          "value": "no"
        }
      ]
    },
    {
      "name": "yes",
      "label": "Show when yes",
      "placeholder": "You damn are positive!",
      "required": true,
      "type": "text"
    },
    {
      "name": "no",
      "label": "Show when no",
      "placeholder": "You damn are negative!",
      "required": true,
      "type": "text"
    }
  ],
  "blocks": [
    {
      "type": "field",
      "field": {
        "$ref": "#/fields/condition"
      }
    },
    {
      "type": "field",
      "field": {
        "$ref": "#/fields/yes"
      },
      "hidden": [
        {
          "$ref": "#/fields/condition/value"
        },
        "==",
        "no"
      ]
    },
    {
      "type": "field",
      "field": {
        "$ref": "#/fields/no"
      },
      "hidden": [
        {
          "$ref": "#/fields/condition/value"
        },
        "==",
        "yes"
      ]
    }
  ]
}
