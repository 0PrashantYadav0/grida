{
  "$schema": "https://forms.grida.co/schema/form.schema.json",
  "title": "Computed Fields Demo",
  "name": "computed property (output) fields",
  "description": "Use Computed property to reference / compute value from other fields",
  "method": "post",
  "fields": [
    {
      "name": "usd",
      "label": "$USD",
      "placeholder": "Enter amount in USD",
      "type": "number"
    },
    {
      "name": "krw",
      "label": "â‚©KRW",
      "type": "number",
      "placeholder": "Computed: USDKRW",
      "readonly": true,
      "value": [
        {
          "$ref": "#/fields/usd/value"
        },
        "*",
        1200
      ]
    },
    {
      "name": "upload",
      "label": "Select File",
      "type": "file"
    },
    {
      "name": "selected_file_name",
      "readonly": true,
      "label": "Selected File",
      "placeholder": "selected file name will be displayed here",
      "type": "text",
      "value": [
        {
          "$ref": "#/fields/upload/files/0/name"
        },
        "+",
        {
          "$ref": "#/fields/upload/files/0/duration"
        }
      ]
    }
  ]
}
