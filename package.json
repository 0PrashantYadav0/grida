{
    "name": "bridged",
    "private": true,
    "license": "Apache 2.0",
    "workspaces": [
        "app",
        "desktop",
        "web",
        "site",
        "packages/app-*",
        "packages/core-*",
        "externals/reflect-core/packages/*",
        "externals/design-sdk/*",
        "externals/design-to-code/packages/*",
        "externals/design-to-code/packages/coli/packages/*",
        "externals/design-to-code/packages/coli-web-builder/*",
